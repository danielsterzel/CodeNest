@model CodeNest.Models.Course
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Utw√≥rz Kurs";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Create New Course</h2>

<form asp-action="CreateCourse" method="post">
    <div class="form-group mb-3">
        @* give the Name field what is put into the form *@
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Subject" class="form-label"></label>
        @* Choose from a list of available options *@
        <select asp-for="Subject" class="form-control" asp-items="ViewBag.Subjects">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TeacherId" class="form-label">Teacher</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers">
            <option value="">-- Select Teacher --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Course</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}